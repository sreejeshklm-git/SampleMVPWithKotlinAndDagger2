<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/main_spacing"
        android:paddingBottom="@dimen/main_spacing"
        android:weightSum="2">
        <TextView
            android:id="@+id/top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="top|center"
            android:background="@drawable/round_rect_gray"
            android:padding="@dimen/main_spacing_small"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/label_text_size_medium"
            tools:text="Top"
            android:layout_marginEnd="@dimen/main_spacing"
            android:layout_marginStart="@dimen/main_spacing"
            android:text="@string/label_top"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/sports"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="top|center"
            android:background="@drawable/round_rect_gray"
            android:padding="@dimen/main_spacing_small"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/label_text_size_medium"
            tools:text="Sports"
            android:layout_marginEnd="@dimen/main_spacing"
            android:text="@string/label_sports"
            tools:visibility="visible" />




    </LinearLayout>

</LinearLayout>